<!-- spinner_dropdown_arrow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Black arrow icon, aligned to the right -->
    <item
        android:drawable="@drawable/black_arrow_down"
        android:gravity="end|center_vertical"
        android:right="10dp" />

    <!-- Optional: Transparent background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Border layer -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#99444444" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
